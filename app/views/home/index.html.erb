<div class="container-fluid">
	<div id="header" style="background-color:#6f5499;height: 138px;width:1366px;" class="jumbotron">
		<h1 style="position: absolute; top:5px; left:300px;color:#F0D01A">E-GYAAN</h1>
		<h3 style="position: absolute; top:60px; left:500px;">....reading redefined</h3>
		<div class="btn-group" style="position: absolute; top:20px; left:1020px; float:right" >
			
			<%= link_to(controller: "register" , action: "author") do %>
				<button type="button" class="btn button glyphicon-pencil ">
					SIGN UP
				</button>
			<% end %>
			<a href="#myModal" data-toggle="modal">
				SIGN IN
			</a>
		</div>
		<div class="btn-group" style="position: absolute; top:55px; left:1020px; float:right">
			
		</div>
	</div>
	<div id="myModal" class="modal fade">
		<div  class="modal-dialog">
			<div class="modal-content">
				<%= form_tag( login_auth_path , class: "form_horizontal" , remote: "true" ) do %>
      			<div class="modal-header">
       				<h4 class="modal-title" id="myModalLabel">LOGIN</h4>
       				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		      	</div>
      			<div class="modal-body">
	      	 		<div id="warning">
		      	 	</div>	
	      	 			<%= label(:email_id ,  "User ID" , class: "control-label"  ) %>
		    			<%= text_field(:email_id , "User" , class: "form-control tip-top"  )  %>
		  			<div id="pass">
		  				<%= label(:password ,  "password" , class: "control-label") %>
		  				<%= password_field(:password  , "password" ,class: "form-control tip-top") %>
		  			</div>
				</div>
      			<div class="modal-footer">
      				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        			<%= submit_tag "Login" , class: "btn btn-primary"%>
      			</div>
      			<% end %>
    		</div>
		</div>
	</div>
	<div class="row">
	<div class="col-xs-2">
	</div>
		<div style="background-color:#000000; " id="myCarousel" class="carousel slide col-xs-10 button">
			<!--<div id="myCarousel" class="carousel slide">-->
			<!-- Carousel indicators -->
				<ol class="carousel-indicators">
					<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
					<li data-target="#myCarousel" data-slide-to="1"></li>
					<li data-target="#myCarousel" data-slide-to="2"></li>
				</ol>   
			<!-- Carousel items -->
			<div class="carousel-inner">
				
				<div class="active item"><%= image_tag "s1.jpg" , class: "img" %></div>
				<div class="item"><img class="img" src="http://marketmybook.in/wp-content/uploads/2013/05/old-books-bible-candle.jpg"></div>
				<div class="item"><img class="img" src="http://img.talkandroid.com/uploads/2013/11/stack_of_books.jpg"></div>
			
			</div>
			<!-- Carousel nav -->
			<a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
			<a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
		</div>
		</div>
</div>
<div id="footer" style="background-color:#470024;clear:both;text-align:center;">
<p style="color:#FF9900">egyaan.com</p></div>
</div>
